pipeline {
    agent any

    tools {
        maven 'Maven-3.9.12'
        jdk 'JDK-17'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile -Denforcer.skip=true'
            }
        }

        stage('Test (Non-blocking)') {
            steps {
                // Do NOT fail pipeline if tests fail
                sh 'mvn test -Denforcer.skip=true || true'
            }
            post {
                always {
                    junit allowEmptyResults: true, testResults: 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('My Sonar Server') {
                    sh 'mvn sonar:sonar -Denforcer.skip=true'
                }
            }
        }

        stage('Quality Gate (Gatekeeper)') {
            steps {
                timeout(time: 2, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying to AWS / Nexus...'
            }
        }
    }

    post {
        success {
            echo 'Pipeline SUCCESS – Quality Gate PASSED'
        }
        failure {
            echo 'Pipeline FAILED – Quality Gate BLOCKED deployment'
        }
    }
}
